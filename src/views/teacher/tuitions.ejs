<%- include('../init/header.ejs') %>

<div class="col-lg-12">
    <div class="card rounded-0 mt-3 border-primary">
        <div class="card-header border-primary">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a href="#invoice" class="nav-link active font-weight-bold" data-toggle="tab">Invoice</a>
                </li>
                <li class="nav-item">
                    <a href="#receipts" class="nav-link font-weight-bold" data-toggle="tab">Receipts</a>
                </li>
                <li class="nav-item">
                    <a href="#history" class="nav-link font-weight-bold" data-toggle="tab">History</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane container active" id="invoice">
                    <form action="#" method="POST" class="pt-3" id="tuitionForm">
                        <input type="hidden" id="_id" value="">
                        <div class="row pt-2">
                            <div class="col">
                                <label class="m-1">Name</label>
                                <input type="text" class="form-control" name="name" id="name" required readonly>
                            </div>
                            <div class="col">
                                <label class="m-1">Email</label>
                                <input type="email" class="form-control" name="email" id="email" required readonly>
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col">
                                <label class="m-1">Tuition</label>
                                <input type="number" class="form-control" name="tuition" id="tuition" required>
                            </div>
                            <div class="col">
                                <label class="m-1">Grand total</label>
                                <input type="number" class="form-control" name="grand_total" id="grand-total" required
                                    readonly>
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col">
                                <label class="m-1">Number of lessons</label>
                                <input type="number" class="form-control" name="lessons" id="lessons" required>
                            </div>
                            <div class="col">
                                <label class="m-1">Lesson duration</label>
                                <input type="number" class="form-control" name="duration" id="duration" value="40"
                                    required>
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col">
                                <label class="m-1">Instrument rental</label>
                                <select name="rental" id="rental" class="form-control">
                                    <option value="none" id="none">--Select One--</option>
                                    <option value="violin" id="violin">Violin</option>
                                    <option value="cello" id="cello">Cello</option>
                                </select>
                            </div>
                            <div class="col">
                                <label class="m-1">Rental fee</label>
                                <input type="number" class="form-control" name="rental_fee" id="rental-fee">
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col">
                                <label class="m-1">Special</label>
                                <input type="text" class="form-control" name="special" id="special">
                            </div>
                            <div class="col">
                                <label class="m-1">Special fee</label>
                                <input type="number" class="form-control" name="special_fee" id="special-fee">
                            </div>
                        </div>
                        <div class="row pt-4">
                            <div class="col">
                                <input type="button" class="btn btn-light btn-block" id="resetBtn" value="Reset">
                            </div>
                            <div class="col">
                                <input type="submit" class="btn btn-warning btn-block" id="editTuitionBtn"
                                    value="Edit Tuition">
                            </div>
                        </div>
                    </form>
                    <div class="pt-3">
                        <div class="table-responsive" id="tuitionsTable">
                            <table class="table table-striped table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th>Actions</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Tuition</th>
                                        <th>Grand total</th>
                                        <th>Number of lessons</th>
                                        <th>Lesson duration</th>
                                        <th>Instrument rental</th>
                                        <th>Rental fee</th>
                                        <th>Special</th>
                                        <th>Special fee</th>
                                    </tr>
                                </thead>
                                <tbody id="showTuitions">

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane container fade" id="receipts">
                    <div class="table-responsive" id="receiptsTable">
                        <table class="table table-striped table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>Actions</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Grand total</th>
                                    <th>Time sent</th>
                                </tr>
                            </thead>
                            <tbody id="showReceipts">

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane container fade" id="history">
                    <div class="table-responsive" id="historyTable">
                        <table class="table table-striped table-bordered text-center" id="initHistory">
                            <thead>
                                <tr>
                                    <th>Actions</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Grand total</th>
                                    <th>Time sent</th>
                                </tr>
                            </thead>
                            <tbody id="showHistory">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<script type="module" src="/tuitions.js"></script>
</body>

</html>